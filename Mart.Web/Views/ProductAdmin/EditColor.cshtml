@model Mart.Web.Models.ProductColor

<form class="form-container" asp-controller="ProductAdmin" asp-action="EditColor" method="post">
    <div>
        <label for="ProductColorName" class="form-control">Product Color Name:</label>
        <input type="text" class="form-control" id="ProductColorName" name="ProductColorName" value="@Model.ProductColorName" required />
    </div>
    <div>
        <label for="ProductColorAsciiCode" class="form-control">Product Color Ascii Code:</label>
        <input type="text" class="form-control" id="ProductColorAsciiCode" name="ProductColorAsciiCode" value="@Model.ProductColorAsciiCode" />
    </div>
    <input type="hidden" id="ProductColorId" name="ProductColorId" value="@Model.ProductColorId" />
    <input type="submit" value="Edit Color" class="btn btn-primary" />
</form>