@model Mart.Web.Models.ViewModels.LoginViewModel


@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-action="Login" asp-controller="Account" class="form">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="UserName">User Name</label>
        <input type="text" name="UserName" id="UserName" class="form-control" value="@Model.UserName" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" name="Password" id="Password" class="form-control" value="@Model.Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    New user? <a href="@Url.Action("CreateAccount", "Account")">Create Account</a>
    <button type="submit" class="btn btn-primary">Login</button>
</form>